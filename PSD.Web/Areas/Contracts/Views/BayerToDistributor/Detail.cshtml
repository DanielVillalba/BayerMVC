        <div class="form-group">
            <label for="Folio" class="col-md-4 control-label"></label>
            <div class="col-md-6">
                @if (Model.ContractDistributorStatus.IdB == "review-bayer")
                {
                    if (Identity.CurrentUser.IsInRole(UserRole.EmployeeManagerOperation))
                    {
                        <button type="button" class="btn btn-primary" onclick="window.location = '/Contracts/BayerToDistributor/Approve/@Model.Id';">Aprobar</button>
                    }
                    if (Identity.CurrentUser.IsInRole(UserRole.EmployeeRTVOperation))
                    {
                        <button type="button" class="btn btn-primary" onclick="window.location = '/Contracts/BayerToDistributor/RequestApprovalDistributor/@Model.Id';">Enviar a revisi&oacute;n distribuidor</button>
                        <button type="button" class="btn btn-info" onclick="window.location = '/Contracts/BayerToDistributor/RequestApprovalGRV/@Model.Id';">Solicitar aprobaci&oacute;n GRV</button>
                        <button type="button" class="btn btn-info" onclick="window.location = '/Contracts/BayerToDistributor/Edit/@Model.Id';">Editar</button>
                        if (Model.Distributor.CurrentContract == null)
                        {//no tiene ningun convenio
                            <button type="button" class="btn btn-info" onclick="window.location.href = '/Contracts/BayerToDistributor/Create/@Model.Id';">Crear convenio</button>
                        }
                    }
                }
                <button type="button" class="btn btn-default" onclick="window.location = '/Contracts/BayerToDistributor';">Regresar</button>
            </div>
            <div class="col-md-2 text-right">
                @if (Identity.CurrentUser.IsInRole(UserRole.EmployeeManagerOperation + "," + UserRole.EmployeeRTVOperation))
                {
                    <button type="button" class="btn btn-danger" onclick='if (confirm(" ¿está seguro de que desea eliminar este convenio?")) window.location.href = "/Contracts/BayerToDistributor/Delete/@Model.Id" ;'>Eliminar</button>
                }
            </div>
        </div>
    </div>
</div>

