@using PSD.Model
@using PSD.Security
@model PSD.Model.ContentLink
@{
    ViewBag.Title = "Alta de hipervínculo";
}

@using (Html.BeginForm("Add", "Link", new { }, FormMethod.Post, new { @class = "form-horizontal col-md-6", role = "form", onsubmit = "return ValidateForm()", name = "Add" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.Id)
    <div class="form-group" id="grpDisplayName">
        <label for="DisplayName" class="col-md-4 control-label">Texto a mostrar<span id="_lblDisplayName" class="field-validation-error text-danger" style="display:none;"></span></label>
        <div class="input-group col-md-8">
            <input type="text" class="form-control" name="DisplayName" id="DisplayName" value="@Model.DisplayName" />
        </div>
    </div>
    <div class="form-group" id="grpUrl">
        <label for="Url" class="col-md-4 control-label">Url <span id="_lblUrl" class="field-validation-error text-danger" style="display:none;">*</span></label>
        <div class="input-group col-md-8">
            <span class="input-group-addon">http://</span>
            <input type="text" class="form-control" name="Url" id="Url" value="@Model.Url" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-10 col-lg-offset-4">
            @Html.ValidationSummary()
            <button type="submit" class="btn btn-primary">Crear</button>
            <button type="button" class="btn btn-default" onclick="window.location('/ContentManagement/Link/Index')">Cancelar</button>
        </div>
    </div>
}
@section pageCSS{
}
@section pageScripts{
    <script type="text/javascript">
        function ValidateForm() {
            return true;
        }
    </script>
}




